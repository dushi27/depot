<!DOCTYPE html>
<html>
<head>
<title>Pragmatic Books Online Store</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body id="store">
  <%= form_tag store_path, :class => 'locale' do %>
    <%= select_tag 'set_locale',
      options_for_select(LANGUAGES, I18n.locale.to_s), onchange: 'this.form.submit()' %>
    <%= submit_tag 'submit' %>
    <%= javascript_tag "$$('.locale input').each(Element.hide)" %>
<% end %>
  <div id="banner">
    <%= image_tag("logo.png", width: 50, higth: 50 ) %>
    <%= @page_title || "Pragmatic Bookshelf" %>
  </div>
  <div id="columns">
    <div id="side">     
      <a href="store/index">Home</a><br />
      <a href="http://www.google.com">Questions</a><br />
      <a href="http://www.google.com">News</a><br />
      <a href="http://www.google.com">Contact</a><br><br>
     <%= button_to 'Checkout', new_order_path, method: :get %>
      
      <% if session[:user_id] %>
        <br />
        <%= link_to 'Orders', orders_path %><br />
        <%= link_to 'Products', products_path %><br />
        <%= link_to 'Users', users_path %><br />
        <br />
        <%= button_to 'Logout', logout_path, :method => :delete %>
      <% end %>
      <div id="cart">
        <%=render @cart%>       
      </div><br>
    </div>
  <div id="main">
    <%= yield %>
  </div>
 </div>
</body>
</html>