<%= link_to 'New Order', new_order_path , class:'btn btn-lg btn-info pull-right'%>
<div id="product_list">
  <h1>Current Orders</h1><br>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Street Address</th>
      <th>City</th>
      <th>Zip Code</th>
      <th>Email</th>
      <th>Pay type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= order.name %></td>
        <td><%= order.street_address %></td>
        <td><%= order.city %></td>
        <td><%= order.zip %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        
        <td><%= link_to 'Actions', order_path(order) %></td>
        
      </tr>
    <% end %>    
  </tbody>
</table>
</div>
<br>
<%= will_paginate @orders %><br>


